            <MudCardMedia Image="/Images/timeManagement.jpg" Height="200" />
            <MudCardContent>
                <MudText Typo="Typo.h5">Time Management</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="4" Class="pa-8">
        <MudCard Elevation="3">
            <MudCardMedia Image="/Images/employees.jpg" Height="200" />
            <MudCardContent>
                <MudText Typo="Typo.h5">Employees</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="4" Class="pa-8">
        <MudCard Elevation="3">
            <MudCardMedia Image="/Images/departments.jpg" Height="200" />
            <MudCardContent>
                <MudText Typo="Typo.h5">Departments</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="4" Class="pa-8">
        <MudCard Elevation="3">
            <MudCardMedia Image="/Images/jobs.jpg" Height="200" />
            <MudCardContent>
                <MudText Typo="Typo.h5">Jobs</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="4" Class="pa-8">
        <MudCard Elevation="3">
            <MudCardMedia Image="/Images/employeeType.jpg" Height="200" />
            <MudCardContent>
                <MudText Typo="Typo.h5">Employee Types</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="4" Class="pa-8">
        <MudCard Elevation="3">
            <MudCardMedia Image="/Images/loggedTimeType.png" Height="200" />
            <MudCardContent>
                <MudText Typo="Typo.h5">Logged Time Types</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>

</MudGrid>

@code{

    [Inject]
    public NavigationManager NavigationManager { get; set; }

    private void GoToPage(string route)
    {
        
        NavigationManager.NavigateTo($"/{route}");
    }


}




